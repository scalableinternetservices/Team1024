<script>
  $(document).ready(function(){
    $("#footer").hide();

    function testScroll(ev){
      if(window.pageYOffset>365)
        $("#footer").fadeIn('slow');

      if(window.pageYOffset<365)
        $("#footer").hide();

    }
    window.onscroll=testScroll;
  });


</script>