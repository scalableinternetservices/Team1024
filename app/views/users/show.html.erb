<p id="notice"><%= notice %></p>
<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><b>SingleFile</b></a>
    </div>
    <div class="navbar-collapse collapse" id="nav-color">

      <ul class="nav navbar-nav navbar-right">

        <%= button_to "User sign out", destroy_user_session_path, method: :delete, class: 'btn btn-warning', type: 'button' %>
      </ul>


    </div>


  </div>
</div>

<div class="container">

<h1>Search Events</h1>
<table>
  
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

     <%= form_tag user_path, method: :get do %>
     <%= text_field_tag :search, params[:search], size: 60 %>
     <%= submit_tag "Search", name: nil %>
     <% end %>

     <% if @events.nil? %>
     <% elsif @events.length == 0%>
     <p>No relative events found</p>
     <%else%>
     <% @events.each do |event| %>
        <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Save', :controller => 'users', :action=>'save', :fav => event %></td>
        <td><%= link_to 'Line', :controller => 'users', :action=>'line', :line_event => event %></td>
        </tr>
        <%end%>
     <% end %>


  </tbody>

</table>

<h1>Favorite Events</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.favorited_events.each do |event| %>
      <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Delete', :controller => 'users', :action=>'delete', :delete_fav => event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Current Events</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.attended_events.each do |event| %>
      <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Quit', :controller => 'users', :action=>'quit', :delete_att => event %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


