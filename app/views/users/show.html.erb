<p id="notice"><%= notice %></p>

<h1>Search Events</h1>
<table>
  
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

     <%= form_tag user_path, method: :get do %>
     <%= text_field_tag :search, params[:search], size: 60 %>
     <%= submit_tag "Search", name: nil %>
     <% end %>

     <% if @events.nil? %>
     <% elsif @events.length == 0%>
     <p>No relative events found</p>
     <%else%>
     <% @events.each do |event| %>
        <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Save', :controller => 'users', :action=>'save', :fav => event %></td>
        <td><%= link_to 'Line', :controller => 'users', :action=>'line', :line_event => event %></td>
        </tr>
        <%end%>
     <% end %>


  </tbody>

</table>

<h1>Favorite Events</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.favorited_events.each do |event| %>
      <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Delete', :controller => 'users', :action=>'delete', :delete_fav => event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Current Events</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.attended_events.each do |event| %>
      <tr>
        <td><%= event.name%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Quit', :controller => 'users', :action=>'quit', :delete_att => event %></td>
      </tr>
    <% end %>
  </tbody>
</table>



