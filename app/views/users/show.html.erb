<div class="container"></div>

<div id="exTab1" class="container"> 
<ul class="nav nav-tabs">
      <li class="<%= "active" if params[:search] == nil %>">
        <a  href="#1" data-toggle="tab">Current Events</a>
      </li>
      <li><a href="#2" data-toggle="tab">Favorite Events</a>
      </li>
      <li class="<%= "active" if params[:search] != nil %>"><a href="#3" data-toggle="tab">Search Events</a>
      </li>
    </ul>

      <div class="tab-content ">
        <div class="tab-pane <%= "active" if params[:search] == nil %>" id="1">
          <table class="table-in-tabs">
            <thead>
              <tr>
              <th colspan="3"></th>
               </tr>
            </thead>
          <tbody>
            <% current_user.attended_events.each do |event| %>
            <tr>
              <td><%= event.name%></td>
              <td><%= link_to 'Show', event , class: 'btn btn-info', type: 'button'%></td>
              <td><%= link_to 'Quit', {:controller => 'users', :action=>'quit', :delete_att => event} ,{class: 'btn btn-danger', type: 'button'}%></td>
            </tr>
            <% end %>
          </tbody>
          </table>
        </div>
        <div class="tab-pane" id="2">
          <table class="table-in-tabs">
          <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% current_user.favorited_events.each do |event| %>
              <tr>
                <td><%= event.name%></td>
                <td><%= link_to 'Show', event, class: 'btn btn-info', type: 'button' %></td>
                <td><%= link_to 'Delete', {:controller => 'users', :action=>'delete', :delete_fav => event} ,{class: 'btn btn-danger', type: 'button'}%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        <div class="tab-pane <%= "active" if params[:search] != nil %>" id="3">
          <table class="table-in-tabs">
            <thead>
              <tr>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
                 <%= form_tag user_path, method: :get do %>
                  <%= text_field_tag :search, params[:search], size: 30 %>
                  <%= submit_tag "Search", name: nil, class: "btn btn-default", id: "search-button" %>
                 <% end %>

                 <% if @events.nil? %>
                 <% elsif @events.length == 0%>
                 <p>No relative events found</p>
                 <%else%>
                 <% @events.each do |event| %>
                    <tr>
                    <td><%= event.name %></td>
                    <td><%= link_to 'Show', event, class: 'btn btn-info', type: 'button'%></td>
                    <td><%= link_to 'Save', {:controller => 'users', :action=>'save', :fav => event}, {class: 'btn btn-success', type: 'button'} %></td>
                    <td><%= link_to 'Line', {:controller => 'users', :action=>'line', :line_event => event}, {class: 'btn btn-warning', type: 'button'} %></td>
                    </tr>
                    <%end%>
                 <% end %>
              </tbody>
        </table>
        </div>
      </div>
  </div>




