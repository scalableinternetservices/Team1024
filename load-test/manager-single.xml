  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- start out at the homepage. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking for the sign up button at the first page -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the sign up page, as a user would do.  -->
      <request>
        <http url='/managers/sign_in' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is typing names -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique first name -->
      <setdynvars sourcetype="random_number" start="201" end="300">
        <var name="random_num" />
      </setdynvars>

      <!-- user log in -->
      <request subst="true">
        <http
          url='/managers/sign_in'
          version='1.1'
          method='POST'
          contents='manager%5Bemail%5D=test%%_random_num%%%40test.com&amp;manager%5Bpassword%5D=password&amp;commit=Sign+in'>
<!-- contents='user%5Bemail%5D=test%%_random_num%%%40test.com&amp;user%5Bpassword%5D=password&amp;commit=Sign+in'> -->
        </http>
      </request>

      <!-- wait for up to 2 seconds, user decides to delete account -->
      <thinktime value="2" random="true"></thinktime>

      <!-- perform a search on "event_1" -->
      <request subst="true">
        <http 
                url='/events/new'
                version='1.1'
                method='GET'></http>
      </request>

      <!-- wait for up to 1 seconds, user view the search result -->
      <thinktime value="1" random="true"></thinktime>

 <!-- Content-Disposition: form-data; name="event_pictures[image][]"; filename="download (1).jpg"  Content-Type: image/jpeg -->

      <!-- click to show the event page -->
      <request subst="true">
      <dyn_variable name="redirect" re="(http://.*)\r"/>
          <http
          url='/events'
          version='1.1'
          method='POST'
          contents='utf8=%E2%9C%93&amp;event%5Bname%5D=%%_random_num%%&amp;event%5Bmax_attendance%5D=%%_random_num%%&amp;event%5Bstart_time(1i)%5D=2015&amp;event%5Bstart_time(2i)%5D=06&amp;event%5Bstart_time(3i)%5D=29&amp;event%5Bstart_time(4i)%5D=02&amp;event%5Bstart_time(5i)%5D=02&amp;event%5Bdescription%5D=none&amp;commit=Create+Event'>
        </http>
      </request>
<!--       this will automatically jump to event show page -->


      <!-- wait for up to 2 seconds, user view the event -->
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">   
        <http url="%%_redirect%%" version='1.1' method="DELETE">
        </http>
      </request>
      
      <!-- wait for up to 2 seconds, user view the event -->
      <thinktime value="2" random="true"></thinktime> 
    
<!--       this will automatically jump to manager home page -->

    
    
      <!-- manager sign out -->
      <request>
        <http url="/managers/sign_out" version='1.1' method="DELETE">
        </http>
      </request>

    </session>
